<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

    <%= f.label :Email %>
    <%= f.text_field :log_in, class: 'form-control' ,placeholder: 'Enter Email or Username' %>

    <%= f.label :password %>
    <%= link_to ' (forgot password) ', new_password_reset_path %>
    <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>

    <%= f.label :remember_me, class: "checkbox inline" do %>
    <%= f.check_box :remember_me %>

    <span>Remember me on this computer</span>
    <% end %>

    <%= f.submit "Log in", class: "btn btn-primary" %>
    <div id="social-login">
      <%#=google icon%>
      <% if current_user %>
      Signed in as <strong><%= current_user.name %></strong>!
      <%= link_to "Sign out", signout_path, id: "sign_out" %>
      <% else %>
      <%= link_to image_tag("google-plus.png",height: 24), "/auth/google_oauth2", id: "sign_in" %>
      <% end %>
      <%#=facebook icon%>
      <% if current_user %>
      Signed in as <strong><%= current_user.name %></strong>!
      <%= link_to "Sign out", signout_path, id: "sign_out" %>
      <% else %>
      <%= link_to image_tag("facebook.png",height: 24),  "/auth/facebook", id: "sign_in" %>
      <% end %>
    </div>
<% end %>
<p>New user? <%= link_to "Sign up now!", signup_path %></p>
</div>
</div>

